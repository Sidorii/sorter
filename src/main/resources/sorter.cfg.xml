<?xml version="1.0" encoding="UTF-8"?>
<runner-config>

    <basePackage>com.netcracker.trainee</basePackage>

    <fillers>
        <input>
            <properties>
                <property name="max" value="100"/>
                <property name="length" value="110"/>
                <property name="tile" value="37"/>
            </properties>

            <properties>
                <property name="max" value="1000"/>
                <property name="length" value="1100"/>
                <property name="tile" value="307"/>
            </properties>

            <properties>
                <property name="max" value="10"/>
                <property name="length" value="19"/>
                <property name="tile" value="36"/>
            </properties>
        </input>

        <annotationConfig>true</annotationConfig>
    </fillers>

    <experiment>

        <fillStrategy enableFillersStrategy="true"/>

        <analyzers>
            <analyser>
                <class>com.netcracker.trainee.analyzer.SorterTimeAnalyzer</class>
            </analyser>
        </analyzers>

        <sorters auto-scan="true"/>
    </experiment>

</runner-config>